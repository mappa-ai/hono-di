{
  "name": "@mappa/hono-di",
  "version": "1.0.0",
  "description": "Simple dependency injection for Hono",
  "type": "module",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc -b tsconfig.json",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.js"
      },
      "require": {
        "types": "./dist/src/index.d.cts",
        "default": "./dist/src/index.cjs"
      }
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mappa-ai/hono-di.git",
    "directory": "packages/hello"
  },
  "homepage": "https://github.com/mappa-ai/hono-di",
  "peerDependencies": {
    "hono": "*",
    "typescript": "*"
  },
  "devDependencies": {
    "publint": "^0.3.9",
    "tsup": "^8.4.0",
    "vitest": "^3.2.4"
  }
}
